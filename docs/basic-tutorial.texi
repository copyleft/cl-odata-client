                              ("UserName" . "teresa")
                              ("FirstName" . "Teresa")
                              ("LastName" . "Gilbert")
                              ("Gender" . "Female")
                              ("Emails" . ("teresa@@example.com" "teresa@@contoso.com"))
                              ("AddressInfo" . ((("Address" . "1 Suffolk Ln.")
                                                ("City" . (("CountryRegion" . "United States")
                                                           ("Name" . "Boise")
                                                           ("Region" . "ID"))))))))

(princ 
  (-> +trip-pin-modify+
    (collection "People")
    (post *p*)))

@end lisp

