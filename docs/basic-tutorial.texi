(let ((russell (-> +trip-pin-modify+
                   (collection "People")
                   (id "russellwhyte")
                   (fetch t))))
  ;; Then we use the entity as base for new api call and fetch its friends
  (-> russell
      (collection "Friends")
      (fetch t)))
@end lisp

